@using MVCPresentationLayer.Models.Anuncio;
@model List<DetalhesQueryViewModel>
@{
    ViewData["Title"] = "Index";
}




<section class="hero-wrap hero-wrap-2" style="background-image: url(&quot;images/bg_2.jpg&quot;); max-height: 350px;" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5 fadeInUp ftco-animated">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Anuncios <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-0 bread">Anuncios</h1>
            </div>
        </div>
    </div>
</section>

<div class="container">
    @if (ViewBag.Error != null)
    {
        <div style="display: block; margin-top: 8px;"></div>
        <div class="row">
            <div class="col-md-6">
                <span class="error">@ViewBag.Error</span>
            </div>
        </div>
    }

    <div class="row">
        @foreach (DetalhesQueryViewModel anuncio in this.Model)
        {
            string fotoUrl = "imgSistema/" + anuncio.ID + "/1.jpg";

            <div class="col-md-4 ftco-animate fadeInUp ftco-animated">
                <h2><a href="/Anuncio/Detalhes/@anuncio.ID">@anuncio.Nome</a></h2>
                <div class="work mb-4 img d-flex align-items-end" style="background-image: url('@fotoUrl');">

                    <div class="desc w-100 px-4">
                        <div class="text w-100 mb-3">
                            <span>@anuncio.Tipo</span>
                            <h2><a href="/Anuncio/Detalhes/@anuncio.ID">@anuncio.DataAnuncio</a></h2>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>

