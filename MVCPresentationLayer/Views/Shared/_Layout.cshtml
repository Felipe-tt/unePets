                    <li class="nav-item"><a href="/Anuncio/Create" class="nav-link">Anunciar</a></li>
                    <li class="nav-item"><a href="/Pessoa/Profile" class="nav-link">Perfil</a></li>
                    <li class="nav-item"><a href="/Pessoa/Login" class="nav-link">Login</a></li>
                    <li class="nav-item"><a href="/Chat/Index" class="nav-link">Chat</a></li>
                    <li class="nav-item"><a href="https://www.instagram.com/une__pets/" class="nav-link">Instagram</a></li>
                    <li class="nav-item"><a href="/Home" class="nav-link">Gallery</a></li>
                    <li class="nav-item"><a href="/Home" class="nav-link">Pricing</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="ftco-section bg-light">
        <div class="container">
            @RenderBody()
        </div>
    </section>

    <footer class="footer">
			<div class="container">
				<div class="row">
					<div class="col-md-6 col-lg-3 mb-4 mb-md-0">
						<h2 class="footer-heading">Links rápidos</h2>
						<p></p><ul class="list-unstyled">
                    <li><a href="/Home" class="py-2 d-block">Home</a></li>
                    <li><a href="/Anuncio" class="py-2 d-block">Adote</a></li>
                    <li><a href="/Anuncio/Create" class="py-2 d-block">Anunciar</a></li>
                    <li><a href="/Pessoa/Profile" class="py-2 d-block">Perfil</a></li>
                    <li><a href="/Pessoa/Create" class="py-2 d-block">Cadastre-se</a></li>
                    <li><a href="/Pessoa/Login" class="py-2 d-block">Login</a></li>
                </ul><p></p>
					</div>
					<div class="col-md-6 col-lg-3 mb-4 mb-md-0">
						<h2 class="footer-heading">Entre em contato</h2>
					<a href="unepetsadopt@gmail.com"><span class="icon fa fa-paper-plane"></span><span class="text">unepetsadopt@gmail.com</span></a></div>
				</div>
			</div>
		</footer>


    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.stellar.min.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/js/jquery.timepicker.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/js/google-map.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>










